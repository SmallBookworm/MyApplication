<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/primaryLayout"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ff8c03"
        android:gravity="center"
        android:text="预考核"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="已预约实验项目:"
        android:id="@+id/primary_textView" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/primary_all"
            android:text="一键预考核"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/primary_choosen"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/primary_choosen"
            android:text="预考核被选则项"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            />
    </LinearLayout>
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<LinearLayout
    android:id="@+id/experimentLinearLayout"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

</LinearLayout>

</ScrollView>

</LinearLayout>